<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>

<BorderPane prefHeight="720" prefWidth="1080" style="-fx-background-color: #3c3c3c;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cab302.cab302.controller.QuestionController">

    <!-- Top Navigation Bar with Centered Title -->
    <top>
        <HBox spacing="0" style="-fx-padding: 12; -fx-background-color: #2b2b2b;">
            <!-- Left Navigation -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 12;" text="Home" />
                <Button style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 12;" text="Leaderboard" />
                <Button prefWidth="65.0" style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 12;" text="About" />
            </HBox>

            <!-- Spacer before title -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Centered Title -->
            <StackPane>
                <Label style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" text="Mental Math Game" />
            </StackPane>

            <!-- Spacer after title -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Right Hamburger Menu -->
            <HBox alignment="CENTER_RIGHT" spacing="20">
                <Button prefHeight="25.0" prefWidth="169.0" style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 12;" text="" />
                <Button fx:id="hamburgerMenu" prefHeight="25.0" prefWidth="47.0" style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 12;" text="≡" />
            </HBox>
        </HBox>
    </top>

    <!-- Left Operation Symbols -->
    <left>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;">
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="+" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="−" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="×" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="÷" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="+" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="−" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="×" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="÷" />
        </VBox>
    </left>

    <!-- Right Operation Symbols -->
    <right>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;">
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="+" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="−" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="×" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="÷" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="+" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="−" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="×" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="÷" />
        </VBox>
    </right>

    <!-- Center Question and Answer Section -->
    <center>
        <VBox alignment="CENTER" spacing="20">

            <!-- Score and High Score -->
            <HBox alignment="CENTER" spacing="40">
                <Label fx:id="scoreLabel" style="-fx-text-fill: #cccccc; -fx-font-size: 16;" text="Score: 0" />
                <Label fx:id="highScoreLabel" style="-fx-text-fill: #cccccc; -fx-font-size: 16;" text="High Score: 1" />
            </HBox>

            <!-- Timer Countdown -->
            <Label fx:id="timerLabel" style="-fx-text-fill: #cccccc; -fx-font-size: 16;" text="Time: 1:30" />

            <!-- Timer Progress Bar -->
            <ProgressBar fx:id="timerProgressBar" prefWidth="750" progress="0.3" style="-fx-accent: #2DBEDF;" />

            <!-- Spacer between progress bar and question -->
            <Region prefHeight="75" />

            <!-- Question Display -->
            <!-- LaTeX Question Display -->
            <WebView fx:id="questionWebView" prefHeight="60.0" prefWidth="905.0" />

            <!-- Answer Input -->
            <!-- Placeholder Label -->
            <Label fx:id="answerPlaceholder" style="-fx-text-fill: #cccccc; -fx-font-size: 24;" text="?" />
            <!-- Hidden Answer Field -->
            <TextField fx:id="answerField" maxWidth="200" promptText="Enter your answer..." style="-fx-border-color: white; -fx-border-radius: 2%; -fx-border-width: 1; -fx-background-color: #2b2b2b; -fx-text-fill: white; -fx-font-size: 16;" />
         <Button fx:id="submit" mnemonicParsing="false" onAction="#onSubmit" style="-fx-background-color: #2DBEDF; -fx-text-fill: white; -fx-font-size: 16;" text="Submit" textFill="WHITE" />
         <Label fx:id="statusLabel" textAlignment="CENTER" textFill="RED">
            <font>
               <Font size="14.0" />
            </font>
         </Label>

            <Region prefHeight="50" />

            <Button fx:id="skipButton" onAction="#onSkip" prefHeight="0.0" prefWidth="46.0" style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 14;" text="Skip" />

        </VBox>
    </center>

    <!-- Bottom Skip Button -->
    <bottom>

    </bottom>

</BorderPane>
