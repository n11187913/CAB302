<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cab302.cab302.controller.HomeController"
            style="-fx-background-color:#2f2f2f;"
            fx:id="rootPane">

    <!-- ========= TOP NAV ========= -->
    <top>
        <HBox spacing="24" style="-fx-background-color:#2a2a2a; -fx-padding:8 12;">
            <Label text="Home"   style="-fx-text-fill:#00bcd4; -fx-font-weight:bold; -fx-underline:true;"/>
            <Label text="Leaderboard" style="-fx-text-fill:#e0e0e0;"/>
            <Label text="About"  style="-fx-text-fill:#e0e0e0;"/>
            <Pane HBox.hgrow="ALWAYS" />
            <Label text="Mental Math Game" style="-fx-text-fill:#e0e0e0; -fx-font-weight:bold;"/>
            <Pane HBox.hgrow="ALWAYS" />
            <Button text="≡"
                    onAction="#goProfile"
                    style="-fx-background-color: transparent;
               -fx-border-color: transparent;
               -fx-text-fill:#e0e0e0;
               -fx-font-size:16;"/>
        </HBox>
    </top>

    <!-- ========= LEFT RAIL ========= -->
    <left>
        <VBox spacing="26" alignment="CENTER"
              style="-fx-padding:12 8; -fx-background-color:#2b2b2b;">
            <Label text="+" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="×" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="÷" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="+" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="×" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="÷" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
        </VBox>
    </left>

    <!-- ========= RIGHT RAIL ========= -->
    <right>
        <VBox spacing="26" alignment="CENTER"
              style="-fx-padding:12 8; -fx-background-color:#2b2b2b;">
            <Label text="+" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="×" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="÷" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="+" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="×" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="÷" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
        </VBox>
    </right>

    <!-- ========= CENTER CONTENT ========= -->
    <center>
        <VBox spacing="48" alignment="TOP_CENTER">
            <padding>
                <Insets top="28" right="24" bottom="24" left="24"/>
            </padding>

            <!-- ======= Daily Challenge ======= -->
            <VBox spacing="10" alignment="CENTER">
                <HBox spacing="12" alignment="CENTER">
                    <Label text="🗓" style="-fx-font-size:20; -fx-text-fill:#e0e0e0;"/>
                    <Label text="Daily Challenge"
                           style="-fx-text-fill:#27d3f8; -fx-font-size:24; -fx-font-weight:bold;"/>
                    <Label text="🗓" style="-fx-font-size:20; -fx-text-fill:#e0e0e0;"/>
                </HBox>

                <HBox alignment="CENTER" spacing="8">
                    <ToggleButton text="Easy" fx:id="dcEasy" toggleGroup="$difficultyGroup" selected="true"
                                  styleClass="difficulty-btn"/>
                    <ToggleButton text="Medium" fx:id="dcMedium" toggleGroup="$difficultyGroup"
                                  styleClass="difficulty-btn"/>
                    <ToggleButton text="Hard" fx:id="dcHard" toggleGroup="$difficultyGroup"
                                  styleClass="difficulty-btn"/>
                </HBox>

                <!-- buttons directly under the chips -->
                <HBox spacing="12" alignment="CENTER">
                    <Button text="Start" onAction="#startDaily"
                            prefWidth="96"
                            style="-fx-background-color: #2DBEDF; -fx-text-fill: white; -fx-padding:6 16; -fx-background-radius:8;"/>
                    <Button text="Leaderboard" onAction="#openDailyLeaderboard"
                            prefWidth="120"
                            style="-fx-background-color: #2DBEDF; -fx-text-fill: white; -fx-padding:6 16; -fx-background-radius:8;"/>
                </HBox>

                <Label text="Your current streak: 🔥 4"
                       style="-fx-font-size: 16; -fx-text-fill: orange; -fx-font-weight: bold;"/>
            </VBox>

            <!-- ======= Time Trial ======= -->
            <VBox spacing="10" alignment="CENTER">
                <HBox spacing="12" alignment="CENTER">
                    <Label text="⏱" style="-fx-font-size:20; -fx-text-fill:#e0e0e0;"/>
                    <Label text="Time Trial"
                           style="-fx-text-fill:#27d3f8; -fx-font-size:24; -fx-font-weight:bold;"/>
                    <Label text="⏱" style="-fx-font-size:20; -fx-text-fill:#e0e0e0;"/>
                </HBox>

                <HBox alignment="CENTER" spacing="8">
                    <ToggleButton text="Easy" fx:id="ttEasy" toggleGroup="$difficultyGroup" selected="true"
                                  styleClass="difficulty-btn"/>
                    <ToggleButton text="Medium" fx:id="ttMedium" toggleGroup="$difficultyGroup"
                                  styleClass="difficulty-btn"/>
                    <ToggleButton text="Hard" fx:id="ttHard" toggleGroup="$difficultyGroup"
                                  styleClass="difficulty-btn"/>
                </HBox>

                <HBox spacing="12" alignment="CENTER">
                    <Button text="Start" onAction="#startTimeTrial"
                            prefWidth="96"
                            style="-fx-background-color: #2DBEDF; -fx-text-fill: white; -fx-padding:6 16; -fx-background-radius:8;"/>
                    <Button text="Leaderboard" onAction="#openTimeTrialLeaderboard"
                            prefWidth="120"
                            style="-fx-background-color: #2DBEDF; -fx-text-fill: white; -fx-padding:6 16; -fx-background-radius:8;"/>
                </HBox>
            </VBox>

            <!-- ======= 1v1 Battle ======= -->
            <VBox spacing="10" alignment="CENTER">
                <HBox spacing="12" alignment="CENTER">
                    <Label text="👥" style="-fx-font-size:20; -fx-text-fill:#e0e0e0;"/>
                    <Label text="1v1 Battle"
                           style="-fx-text-fill:#27d3f8; -fx-font-size:24; -fx-font-weight:bold;"/>
                    <Label text="👥" style="-fx-font-size:20; -fx-text-fill:#e0e0e0;"/>
                </HBox>

                <HBox alignment="CENTER" spacing="8">
                    <ToggleButton text="Easy" fx:id="bEasy" toggleGroup="$difficultyGroup" selected="true"
                                  styleClass="difficulty-btn"/>
                    <ToggleButton text="Medium" fx:id="bMedium" toggleGroup="$difficultyGroup"
                                  styleClass="difficulty-btn"/>
                    <ToggleButton text="Hard" fx:id="bHard" toggleGroup="$difficultyGroup"
                                  styleClass="difficulty-btn"/>
                </HBox>

                <HBox spacing="12" alignment="CENTER">
                    <Button text="Start" onAction="#startBattle"
                            prefWidth="96"
                            style="-fx-background-color: #2DBEDF; -fx-text-fill: white; -fx-padding:6 16; -fx-background-radius:8;"/>
                    <Button text="Leaderboard" onAction="#openBattleLeaderboard"
                            prefWidth="120"
                            style="-fx-background-color: #2DBEDF; -fx-text-fill: white; -fx-padding:6 16; -fx-background-radius:8;"/>
                </HBox>
            </VBox>

        </VBox>
    </center>
</BorderPane>