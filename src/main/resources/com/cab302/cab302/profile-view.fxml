<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cab302.cab302.controller.ProfileController"
            style="-fx-background-color:#2f2f2f;">

    <!-- ========= TOP NAV ========= -->
    <top>
        <HBox spacing="24" style="-fx-background-color:#2a2a2a; -fx-padding:8 12;">
            <Label text="Home"   style="-fx-text-fill:#e0e0e0;"/>
            <Label text="Leaderboard" style="-fx-text-fill:#e0e0e0;"/>
            <Label text="About"  style="-fx-text-fill:#e0e0e0;"/>
            <Pane HBox.hgrow="ALWAYS" />
            <Label text="Mental Math Game" style="-fx-text-fill:#e0e0e0; -fx-font-weight:bold;"/>
            <Pane HBox.hgrow="ALWAYS" />
            <Label text="≡" style="-fx-text-fill:#00bcd4; -fx-font-size:16;" />
        </HBox>
    </top>

    <!-- ========= LEFT RAIL ========= -->
    <left>
        <VBox spacing="26" alignment="CENTER"
              style="-fx-padding:12 8; -fx-background-color:#2b2b2b;">
            <Label text="+" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="×" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="÷" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="+" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="×" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="÷" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
        </VBox>
    </left>

    <!-- ========= RIGHT RAIL ========= -->
    <right>
        <VBox spacing="26" alignment="CENTER"
              style="-fx-padding:12 8; -fx-background-color:#2b2b2b;">
            <Label text="+" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="×" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="÷" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="+" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="×" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
            <Label text="÷" style="-fx-text-fill:#00bcd4; -fx-font-size:36;"/>
        </VBox>
    </right>

    <!-- ========= CENTER CONTENT ========= -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="22" style="-fx-padding:28;">
            <!-- Avatar + Name -->
            <VBox alignment="CENTER" spacing="12">
                <ImageView fx:id="avatar"
                           fitWidth="140" fitHeight="140"
                           preserveRatio="true"
                           pickOnBounds="true"
                           style="-fx-effect:dropshadow(gaussian, rgba(0,0,0,0.35), 16, 0.3, 0, 2);">
                </ImageView>
                <Label fx:id="nameLbl"
                       style="-fx-text-fill:#ffffff; -fx-font-size:18; -fx-font-weight:bold;"
                       text="Guest"/>
            </VBox>

            <!-- Account section -->
            <VBox alignment="CENTER_LEFT" spacing="10" maxWidth="420"
                  style="-fx-background-color:#2a2a2a; -fx-padding:18; -fx-background-radius:12; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.25), 12, 0.3, 0, 2);">
                <Label text="Account"
                       style="-fx-text-fill:#27d3f8; -fx-font-size:14; -fx-font-weight:bold;"/>

                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label text="Profile picture:" style="-fx-text-fill:#e0e0e0; -fx-min-width:90;"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Button text="Upload Image" onAction="#onUploadAvatar"
                            style="-fx-background-color: #2DBEDF; -fx-text-fill: white; -fx-padding:6 16; -fx-background-radius:8;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label text="Email:"
                           style="-fx-text-fill:#e0e0e0; -fx-min-width:90;"/>
                    <Label fx:id="emailLbl"
                           style="-fx-text-fill:#ffffff; -fx-font-weight:bold;" text="—"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Button text="Change Email" onAction="#onChangeEmail"
                            style="-fx-background-color: #2DBEDF; -fx-text-fill: white; -fx-padding:6 16; -fx-background-radius:8;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label text="Password:"
                           style="-fx-text-fill:#e0e0e0; -fx-min-width:90;"/>
                    <Label text="********" style="-fx-text-fill:#ffffff;"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Button text="Change Password" onAction="#onChangePassword"
                            style="-fx-background-color: #2DBEDF; -fx-text-fill: white; -fx-padding:6 16; -fx-background-radius:8;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label text="Delete account-Warning permanent:"
                           style="-fx-text-fill:#e0e0e0; -fx-min-width:90;"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Button text="Delete Account" onAction="#onDeleteAccount"
                            style="-fx-background-color:#b00020; -fx-text-fill:white; -fx-background-radius:8; -fx-padding:6 12;"/>
                </HBox>
            </VBox>

            <!-- Accessibility section -->
            <VBox alignment="CENTER_LEFT" spacing="10" maxWidth="420"
                  style="-fx-background-color:#2a2a2a; -fx-padding:18; -fx-background-radius:12; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.25), 12, 0.3, 0, 2);">
                <Label text="Accessibility"
                       style="-fx-text-fill:#27d3f8; -fx-font-size:14; -fx-font-weight:bold;"/>

                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label text="Language:" style="-fx-text-fill:#e0e0e0; -fx-min-width:90;"/>
                    <ComboBox fx:id="languageBox" prefWidth="220"/>
                </HBox>

            </VBox>

            <!-- Status line -->
            <Label fx:id="status" style="-fx-text-fill:#a0e0ff;"/>
        </VBox>
    </center>
</BorderPane>