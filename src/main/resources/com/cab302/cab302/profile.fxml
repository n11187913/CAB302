<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane prefHeight="720" prefWidth="1080"
            style="-fx-background-color: #3c3c3c;"
            stylesheets="@stylesheet.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cab302.cab302.controller.ProfileController">

    <!-- Top Navigation Bar -->
    <top>
        <HBox spacing="0" style="-fx-padding: 12; -fx-background-color: #2b2b2b;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button text="Home"
                        onAction="#goHome"
                        style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 12;"/>
                <Button text="Leaderboard"
                        onAction="#goLeaderboard"
                        style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 12;"/>
                <Button text="About"
                        onAction="#goAbout"
                        prefWidth="65.0"
                        style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 12;"/>
            </HBox>

            <Region HBox.hgrow="ALWAYS"/>
            <StackPane>
                <Label text="Mental Math Game"
                       style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
            </StackPane>
            <Region HBox.hgrow="ALWAYS"/>

            <HBox alignment="CENTER_RIGHT" spacing="20">
                <Button text="Profile"
                        onAction="#goProfile"
                        style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 12;"/>
            </HBox>
        </HBox>
    </top>

    <!-- Left Symbols -->
    <left>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Profile" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
            </HBox>

            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="+"/>
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="−"/>
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="×"/>
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="÷"/>
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="+"/>
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="−"/>
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="×"/>
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="÷"/>
        </VBox>
    </left>

    <!-- Right Symbols (Back button removed) -->
    <right>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;">
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="+"/>
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="−"/>
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="×"/>
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="÷"/>
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="+"/>
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="−"/>
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="×"/>
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="÷"/>
        </VBox>
    </right>

    <center>
        <VBox alignment="CENTER_LEFT" maxWidth="600" spacing="20" style="-fx-padding: 40;">
            <children>

                <Label text="Profile" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>

                <HBox alignment="CENTER_LEFT" spacing="20">
                    <children>
                        <VBox alignment="CENTER" spacing="8">
                            <children>
                                <ImageView fx:id="avatar" fitWidth="120" fitHeight="120" preserveRatio="true">
                                    <image>
                                        <Image url="@profile.png"/>
                                    </image>
                                    <clip>
                                        <Circle radius="60" centerX="60" centerY="60"/>
                                    </clip>
                                </ImageView>
                                <Button text="Change Profile" onAction="#onUploadAvatar"
                                        style="-fx-background-color: #2DBEDF; -fx-text-fill: white;"/>
                            </children>
                        </VBox>

                        <VBox spacing="6">
                            <children>
                                <Label fx:id="nameLbl" text="Guest" style="-fx-text-fill: white;"/>
                                <Label fx:id="emailLbl" text="—" style="-fx-text-fill: white;"/>
                                <Label fx:id="bioLbl" text="I love solving math problems!!" style="-fx-text-fill: white;"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <Separator/>

                <VBox spacing="10">
                    <children>
                        <Label text="Account" style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"/>
                        <HBox spacing="10">
                            <children>
                                <Button text="Change Name"     onAction="#onChangeName"     minWidth="150"
                                        style="-fx-background-color: #2DBEDF; -fx-text-fill: white;"/>
                                <Button text="Change Email"    onAction="#onChangeEmail"    minWidth="150"
                                        style="-fx-background-color: #2DBEDF; -fx-text-fill: white;"/>
                                <Button text="Change Password" onAction="#onChangePassword" minWidth="150"
                                        style="-fx-background-color: #2DBEDF; -fx-text-fill: white;"/>
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button text="Delete Account"  onAction="#onDeleteAccount"  minWidth="150"
                                        style="-fx-background-color: #2DBEDF; -fx-text-fill: white;"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox spacing="12">
                    <children>
                        <Label text="Preferences" style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"/>

                        <GridPane hgap="12" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" minWidth="110"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                            <children>
                                <Label text="Language:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                                       style="-fx-text-fill: white;"/>
                                <ComboBox fx:id="languageBox" prefWidth="180"
                                          GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <CheckBox fx:id="accessibilityBox" text="Accessibility Mode"
                                          GridPane.rowIndex="1" GridPane.columnIndex="1"
                                          GridPane.halignment="LEFT" style="-fx-text-fill: white;"/>
                            </children>
                        </GridPane>
                    </children>
                </VBox>

                <VBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Game Stats" style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"/>
                        <ProgressBar fx:id="progressBar" progress="0.5" styleClass="progress-wide"/>
                        <Label fx:id="levelLbl" text="⭐ Level 5" style="-fx-text-fill: white;"/>
                    </children>
                </VBox>

                <Label fx:id="status" text="" style="-fx-text-fill: white;"/>

            </children>
            <padding>
                <Insets top="24" right="24" bottom="24" left="24"/>
            </padding>
        </VBox>
    </center>

</BorderPane>
