<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ProgressBar?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="ui.ProfileController"
      spacing="20" alignment="CENTER" style="-fx-background-color: #2b2b2b; -fx-padding: 30;">
    <children>

        <!-- Title -->
        <Label text="Profile Page" style="-fx-text-fill: white; -fx-font-size: 26; -fx-font-weight: bold;"/>

        <!-- Profile section -->
        <VBox spacing="10" alignment="CENTER">
            <ImageView fx:id="avatar" fitWidth="120" fitHeight="120" preserveRatio="true"
                       style="-fx-background-color: gray; -fx-border-color: white; -fx-border-width: 2; -fx-background-radius: 60;"/>
            <Label fx:id="nameLbl" text="Name" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
            <Label fx:id="emailLbl" text="email@example.com" style="-fx-text-fill: white;"/>
            <Label fx:id="phoneLbl" text="+61XXXXXX" style="-fx-text-fill: white;"/>
            <Label fx:id="bioLbl" text="i love solving math problems!!" style="-fx-text-fill: white; -fx-font-style: italic;"/>
        </VBox>

        <!-- Account settings -->
        <VBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Account" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
            <Button text="Change Email" onAction="#onChangeEmail"/>
            <Button text="Change Password" onAction="#onChangePassword"/>
            <Button text="Delete Account" style="-fx-background-color: #b00020; -fx-text-fill: white;" onAction="#onDeleteAccount"/>
        </VBox>

        <!-- Preferences -->
        <VBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Preferences" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
            <HBox spacing="10">
                <Label text="Language:" style="-fx-text-fill: white;"/>
                <ComboBox fx:id="languageBox"/>
            </HBox>
            <CheckBox fx:id="accessibilityBox" text="Accessibility Mode" style="-fx-text-fill: white;"/>
        </VBox>

        <!-- Game Stats -->
        <VBox spacing="8" alignment="CENTER">
            <Label text="Game Stats" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
            <ProgressBar fx:id="progressBar" prefWidth="200"/>
            <Label fx:id="levelLbl" text="⭐ Level 5" style="-fx-text-fill: yellow; -fx-font-size: 16;"/>
        </VBox>

        <Label fx:id="status" style="-fx-text-fill: lightgreen;"/>
    </children>
</VBox>
