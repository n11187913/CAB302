<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="720" prefWidth="1080" style="-fx-background-color: #3c3c3c;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cab302.cab302.controller.GameOverController">

    <!-- Top Navigation Bar with Centered Title -->
    <top>
        <HBox spacing="0" style="-fx-padding: 12; -fx-background-color: #2b2b2b;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 12;" text="Home" />
                <Button style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 12;" text="Leaderboard" />
                <Button prefWidth="65.0" style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 12;" text="About" />
            </HBox>
            <Region HBox.hgrow="ALWAYS" />
            <StackPane>
                <Label style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" text="Mental Math Game" />
            </StackPane>
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER_RIGHT" spacing="20">
                <Button prefHeight="25.0" prefWidth="169.0"
                        style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 12;" text="" />
                <Button fx:id="hamburgerMenu" prefHeight="25.0" prefWidth="47.0"
                        style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 12;" text="≡" />
            </HBox>
        </HBox>
    </top>

    <!-- Left Operation Symbols -->
    <left>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;">
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="+" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="−" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="×" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="÷" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="+" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="−" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="×" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="÷" />
        </VBox>
    </left>

    <!-- Right Operation Symbols -->
    <right>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;">
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="+" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="−" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="×" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="÷" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="+" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="−" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="×" />
            <Label style="-fx-text-fill: #2DBEDF; -fx-font-size: 40;" text="÷" />
        </VBox>
    </right>

    <!-- Center Content: Game Results -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Game Over!" style="-fx-font-size: 36; -fx-text-fill: white; -fx-font-weight: bold;" />

            <Label fx:id="finalScoreLabel" text="Score: 0" style="-fx-font-size: 24; -fx-text-fill: white;" />
            <Label fx:id="highScoreLabel" text="High Score: 0" style="-fx-font-size: 24; -fx-text-fill: white;" />
            <Label fx:id="streakLabel" text="Highest Streak: 0" style="-fx-font-size: 24; -fx-text-fill: white;" />
            <Label fx:id="fastestAnswerLabel" text="Fastest Answer: 0 s" style="-fx-font-size: 24; -fx-text-fill: white;" />
            <Label fx:id="accuracyLabel" text="Accuracy: 0%" style="-fx-font-size: 24; -fx-text-fill: white;" />

            <HBox spacing="40" alignment="CENTER">
                <Button fx:id="homeBtn" text="Home" style="-fx-background-color: #2DBEDF; -fx-text-fill: white; -fx-font-size: 18;" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
